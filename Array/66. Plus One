class Solution {
    public int[] plusOne(int[] digits) {
        int n = digits.length;

        int idx = n - 1;
        if (digits[idx] < 9) {
            digits[idx] += 1;
            return digits;
        }

        int carry = 1;
        while (idx >= 0 && carry == 1) {
            digits[idx] += carry;

            if (digits[idx] == 10) {
                digits[idx] = 0;
                carry = 1;
            } else {
                carry = 0;
            }
            idx--;
        }

        if (carry == 1) {
            int[] ans = new int[n + 1];
            ans[0] = 1;
            return ans;
        }
        return digits;
    }
}